      VpcId: !Ref 'VPC'
    Type: AWS::EC2::SecurityGroup
  Ec2Instance:
    Properties:
      ImageId: !Ref 'MssqlServerImageId'
      InstanceType: !Ref 'MssqlEc2InstanceType'
      KeyName: !Ref 'MSSqlKeyPair'
      SecurityGroupIds:
        - !Ref 'AppDBSecurityGroup'
      SubnetId: !Ref 'PrivateSubnet1'
      Tags:
        - Key: Name
          Value: !Join
            - ''
            - - !Ref 'AWS::StackName'
              - ' MsSql Servers'
      UserData: !Base64 '80'
    Type: AWS::EC2::Instance
  InternetGateway:
    Properties:
      Tags:
        - Key: Name
          Value: !Join
            - ''
            - - !Ref 'AWS::StackName'
